<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:layout_marginEnd="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="1dp"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="?attr/itemBackgroundColor"
        app:cardCornerRadius="2dp"
        app:cardElevation="2dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="12dp"
            android:paddingEnd="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingStart="8dp"
            android:paddingTop="12dp">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="?attr/textColor1"
                android:textSize="16sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="TitleTitleTitleTitleTitleTitleTitleTitleTitleTitleTitleTitleTitleTitleTitleTitleTitleTitleTitleTitle" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/iv_user"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginTop="12dp"
                android:src="@drawable/icon_user"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_title" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginStart="2dp"
                android:textColor="?attr/textColor3"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/iv_user"
                app:layout_constraintLeft_toRightOf="@+id/iv_user"
                app:layout_constraintTop_toTopOf="@+id/iv_user"
                tools:text="UserName" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/iv_time"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginEnd="2dp"
                android:layout_marginRight="2dp"
                android:src="@drawable/icon_time"
                app:layout_constraintBottom_toBottomOf="@+id/iv_user"
                app:layout_constraintRight_toLeftOf="@+id/tv_time"
                app:layout_constraintTop_toTopOf="@+id/iv_user" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="6dp"
                android:layout_marginRight="6dp"
                android:textColor="?attr/textColor3"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/iv_user"
                app:layout_constraintRight_toLeftOf="@+id/iv_reply_num"
                app:layout_constraintTop_toTopOf="@+id/iv_user"
                tools:text="50分钟前" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/iv_reply_num"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginEnd="2dp"
                android:layout_marginRight="2dp"
                android:src="@drawable/icon_reply"
                app:layout_constraintBottom_toBottomOf="@+id/iv_user"
                app:layout_constraintRight_toLeftOf="@+id/tv_reply_num"
                app:layout_constraintTop_toTopOf="@+id/iv_user" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_reply_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?attr/textColor3"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/iv_user"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/iv_user"
                tools:text="999" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>